<form class="form " action="/restaurants/{{restaurant._id}}/edit" method="POST">

  <div class="input-group mb-1">
  <label class="input-group-text" for="{{restaurant._id}}-name">店名</label>
  <input type="text" class="form-control" id="{{restaurant._id}}-name" placeholder="Username" value="{{restaurant.name}}"  aria-label="Username"  aria-describedby="basic-addon1">
  </div>
  <div class="input-group mb-1">
      <label class="input-group-text" for="{{restaurant._id}}-name_en">英文店名</label>
      <input type="text" class="form-control" id="{{restaurant._id}}-name_en" name="name_en" value="{{restaurant.name_en}}" required/>
  </div>
  <div class="input-group mb-1">
      <label class="input-group-text" for="{{restaurant._id}}-category">分類</label>
      <input type="text" class="form-control" id="{{restaurant._id}}-category" name="category"value="{{restaurant.category}}" required/>
  </div>
  <div class="input-group mb-1">
      <label class="input-group-text" for="{{restaurant._id}}-image">圖片</label>
      <input type="text" class="form-control" id="{{restaurant._id}}-image" name="image" value="{{restaurant.image}}" required/>
  </div>
  <div class="input-group mb-1">
      <label class="input-group-text" for="{{restaurant._id}}-location">位置</label>
      <input type="text" class="form-control" id="{{restaurant._id}}-location" name="location" value="{{restaurant.location}}" required/>
  </div>
  <div class="input-group mb-1">
      <label class="input-group-text" for="{{restaurant._id}}-phone">號碼</label>
      <input type="text" class="form-control" id="{{restaurant._id}}-phone" name="phone" value="{{restaurant.phone}}" required/>
  </div>
  <div class="input-group mb-1">
      <label class="input-group-text" for="{{restaurant._id}}-rating">評分</label>
      <input type="number" class="form-control" min="0.0" max="10" step="0.1"id="{{restaurant._id}}-rating" name="rating" value="{{restaurant.rating}}" required/>
  </div>
  <div class=" textarea input-group mb-3">
      <label class="input-group-text" for="{{restaurant._id}}-description">描述</label>
      <textarea rows="3" class="form-control" id="{{restaurant._id}}-description" name="description" >{{restaurant.description}}</textarea>

  </div>
  <button>修改</button>
</form>