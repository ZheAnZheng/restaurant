<form class="form " action="/restaurants/new" method="POST">

  <div class="input-group">
      <label for="name">店名</label>
      <input type="text" id="name" name="name"  required/>
  </div>
  <div class="input-group">
      <label for="name_en">英文店名</label>
      <input type="text" id="name_en" name="name_en" value="{{restaurant.name_en}}" required/>
  </div>
  <div class="input-group">
      <label for="category">分類</label>
      <input type="text" id="category" name="category"value="{{restaurant.category}}" required/>
  </div>
  <div class="input-group">
      <label for="image">圖片</label>
      <input type="text" id="image" name="image" value="{{restaurant.image}}" required/>
  </div>
  <div class="input-group">
      <label for="location">位置</label>
      <input type="text" id="location" name="location" value="{{restaurant.location}}" required/>
  </div>
  <div class="input-group">
      <label for="phone">號碼</label>
      <input type="text" id="phone" name="phone" value="{{restaurant.phone}}" required/>
  </div>
  <div class="input-group">
      <label for="rating">評分</label>
      <input type="number" min="0.0" max="10" step="0.1"id="rating" name="rating" value="0" required/>
  </div>
  <div class="input-group">
      <label for="description">描述</label>

      <textarea rows="3" id="description" name="description" ></textarea>

  </div>
  <button>新增餐廳</button>
</form>